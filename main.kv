BoxLayout:
    orientation:'vertical'

    MDToolbar:
        title: 'Zaměstnanci a firmy'
        md_bg_color: .2, .3, .2, 1
        specific_text_color: 1, 1, 1, 1

    MDBottomNavigation:
        id: navigation
        panel_color: .2, .3, .2, 1

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Zaměstnanci'
            icon: 'account-circle'

            ZamestnanciScreen:

<FirmaContent>:
    orientation: 'vertical'
    size_hint_x: 1
    size_hint_y: None
    height: "300dp"

    MDTextField:
        id: nazev
        text: 'Jméno firmy'
        pos_hint: {'center_x': .5, 'center_y': 1}

    MDTextField:
        id: ico
        pos_hint: {'center_x': .5, 'center_y': 0}
        size_hint_x: 1

        text: 'Typ společnosti'


<ZamestnanecContent>:
    orientation: 'vertical'
    size_hint_x: 1
    size_hint_y: None
    height: "300dp"

    MDTextField:
        id: jmeno
        text: 'Jméno a příjmení'
        pos_hint: {'center_x': .5, 'center_y': .8}

    MDTextField:
        id: pozice
        pos_hint: {'center_x': .5, 'center_y': .6}
        size_hint_x: 1
        text: 'Pozice ve firmě'


    MDDropDownItem:
        id: firma_item
        pos_hint: {'center_x': .5, 'center_y': .4}
        size_hint_x: 1
        text: 'Firma'
        on_release: self.parent.menu_firm.open()

