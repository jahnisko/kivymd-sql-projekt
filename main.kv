BoxLayout:
    orientation:'vertical'

    MDToolbar:
        title: 'Zaměstnanci a firmy'
        md_bg_color: .2, .3, .2, 1
        specific_text_color: 1, 1, 1, 1

    MDBottomNavigation:
        id: navigation
        panel_color: .2, .3, .2, 1

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Zaměstnanci'
            icon: 'account-circle'

            ZamestnanciScreen:

<FirmaContent>:
    orientation: 'vertical'
    size_hint_x: 1
    size_hint_y: 5
    height: "1000dp"

    MDTextField:
        id: nazev
        text: 'Jméno firmy'
        pos_hint: {'center_x': .5, 'center_y': 1}

    MDTextField:
        id: odvetvi
        pos_hint: {'center_x': .5, 'center_y': 0}
        size_hint_x: 1
        text: 'Odvětví firmy'

    MDTextField:
        id: misto
        text: "Místo podnikání"

    MDTextField:
        id: tel
        text: "Telefonní kontakt"

<ZamestnanecContent>:
    orientation: 'vertical'
    size_hint_x: 1
    size_hint_y: 5
    height: "100dp"

    MDTextField:
        id: jmeno
        text: 'Jméno a příjmení'
        pos_hint: {'center_x': .5, 'center_y': 1}

    MDTextField:
        id: pozice
        pos_hint: {'center_x': .5, 'center_y': 0}
        size_hint_x: 1
        text: 'Pozice ve firmě'

    MDTextField:
        id: firma
        text: "Firma"


